extend ./layout

block title
  title Remove

block main

  h1 Remove user

  p
    a(href='/login') or login

  form(action='/remove', method='post', novalidate='true')

    if locals.err && locals.err.message
      p.error=locals.err.message

    .form-row
      label(for='username') username
      input(id='username', name='username')
      if locals.err && locals.err.errors && locals.err.errors.username
        label.error=locals.err.errors.username.message

    .form-row
      button(type='submit') Remove user
