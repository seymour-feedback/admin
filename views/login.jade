extend ./layout

block title
  title Login

block main

  block main-centre
    section#centre-content

      h1 Login
        | or&nbsp;
        a.internal(href='/register') Register

      form(action='/login', method='post', novalidate='true', autocomplete='off')

        if locals.err && locals.err.message
          p.error=locals.err.message

        .form-row
          label(for='username') Username
          input(id='username', name='username')
          if locals.err && locals.err.errors && locals.err.errors.username
            label(for='username').error=locals.err.errors.username.message

        .form-row
          label(for='password') Password
          input(type='password', id='password', name='password')
          if locals.err && locals.err.errors && locals.err.errors.password
            label(for='password').error=locals.err.errors.password.message

        .form-row
          button(type='submit') Login

