extend ./layout

block title
  title Register

block main

  block main-centre
    section#centre-content

      h1 Register

      p
        a(href='/login') or log in

      form(action='/register', method='post', novalidate='true')

        if locals.err && locals.err.message
          p.error=locals.err.message

        .form-row
          label(for='username') username
          input(id='username', name='username')
          if locals.err && locals.err.errors && locals.err.errors.username
            label.error=locals.err.errors.username.message

        .form-row
          label(for='password') password
          input(type='password', id='password', name='password')
          if locals.err && locals.err.errors && locals.err.errors.password
            label.error=locals.err.errors.password.message

        .form-row
          label(for='url') url
          input(id='url', name='url')
          if locals.err && locals.err.errors && locals.err.errors.url
            label.error=locals.err.errors.url.message

        .form-row
          button(type='submit') Register
