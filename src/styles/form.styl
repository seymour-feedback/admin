.form-row {
  padding: 10px 0;
  label {
    display: block;
    font-size: 18px;
    padding: 4px 0;
  }
  button {
    background-color: rgb(0, 153, 255);
    border: none;
    border-radius: 5px;
    color: rgb(255, 255, 255);
    cursor: pointer;
    padding: 12px 17px;
    font-size: 18px;
    &:hover {
      text-decoration: underline;
    }
  }
  .error {
    color: red;
  }
  input {
    color: #333;
    font-size: 18px;
    padding: 7px 0;
    width: 99%;
    text-indent: 5px;
    border: 1px solid #999;
    border-radius: 3px;
  }
}
